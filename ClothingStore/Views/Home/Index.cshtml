@model IEnumerable<ClothingStore.Models.Categorie>
@using System.Linq

@{
    ViewData["Title"] = "Home Page";
}

@await Html.PartialAsync("Page_Accueil")
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/Page_Test.css">
</head>
<body>

    <ul>


        <li><a class="" asp-area="" asp-controller="Home" asp-action="ajouterPoste">bruh</a></li>
        <li><a class="" asp-area="" asp-controller="Clothes" asp-action="Create">bruh</a></li>
        <li><a class="" asp-area="" asp-controller="Categories" asp-action="Create">bruh2</a></li>
        <li><i class="fas fa-plus icon_ajout" data-toggle="modal" data-target="#addPostModal">yes</i>
        </ul>
    
        <div class="flex">
       
        
            @foreach (var clothe in Model)
            {
                if (clothe != null && clothe.clothes != null)
                {
                    @foreach (var item in clothe.clothes)
                    {
                        
                            <div class="images">

                            @if (item.Photo != null && item.Photo.Length > 0) {
                                <img class="logo" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo)" alt="logo">
                            }
                                <p>@Html.DisplayFor(model => item.ClotheName)</p>
                                <p>@Html.DisplayFor(model => item.Prix)</p>
                                <div class="overlay">
                                    <br>
                                </div>
                        </div>
                        
                  
                       
                    }
                }
            }
        }
    </div>

    div id="addPostModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add a New Post</h4>
            </div>
            <div class="modal-body">
                <form asp-action="AddPost" asp-controller="Home" id="addPostForm" method="post" enctype="multipart/form-data">
                    

                    <div class="form-group">
                        <label for="postTitle">Title:</label>
                        <input type="text" class="form-control" id="postTitle" name="Title" required>
                    </div>
                    <div class="form-group">
                        <label for="postContent">Content:</label>
                        <textarea class="form-control" id="postContent" name="Contenu" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Photo">File:</label>
                        <input type="file" class="form-control" id="postFile" name="Photo">
                    </div>

                  

                    
                   

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="">
            </div>
        </div>
        <div class="">
        </div>
    </div>


   
</body>
</html>