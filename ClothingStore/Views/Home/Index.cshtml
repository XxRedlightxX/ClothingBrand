@model IEnumerable<ClothingStore.Models.Categorie>
@using System.Linq

@{
    ViewData["Title"] = "Home Page";
}

@await Html.PartialAsync("Page_Accueil")
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/Page_Test.css">

     <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="js/bootstrap.min.js"></script>
</head>
<body>

    <ul>


        <li><a class="" asp-area="" asp-controller="Home" asp-action="ajouterPoste">Ajouter un Poste</a></li>
        
        

     
        
    </ul>


    <div class="bar" ><
        @await Component.InvokeAsync("CategorieMenu")
      </div>
    
        <div class="flex">
       
        
            @foreach (var clothe in Model)
            {
                if (clothe != null && clothe.clothes != null)
                {
                    @foreach (var item in clothe.clothes)
                    {
                        
                            <div class="images">

                            @if (item.Photo != null && item.Photo.Length > 0) {
                                <img class="logo" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Photo)" alt="logo">
                            }
                                <p>@Html.DisplayFor(model => item.ClotheName)</p>
                                <p>@Html.DisplayFor(model => item.Prix)</p>
                                <div class="overlay">
                                    <br>
                                </div>
                        </div>
                        
                  
                       
                    }
                }
            }
        }
    </div>

    


   
</body>
</html>